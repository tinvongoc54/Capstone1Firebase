<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Update_All">
    <TextView
        android:background="@drawable/border_mau_vien1"
        android:textStyle="bold"
        android:textColor="#f39"
        android:gravity="center"
        android:textSize="20dp"
        android:text="Cập nhập"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <Button
        android:id="@+id/button_update_menu"
        android:text="Menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/button_update_table"
        android:text="Bàn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/button_update_employee"
        android:text="Nhân viên"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>