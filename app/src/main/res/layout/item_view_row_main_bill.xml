<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:layout_marginBottom="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="3.0"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ln1"
        android:gravity="left"
        android:layout_marginRight="10dp"
        android:layout_weight="2.0"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView

            android:textSize="15dp"
            android:textColor="#000000"
            android:gravity="left"
            android:text="Cà phê đen sài gòn"
            android:layout_weight="1.0"
            android:id="@+id/text_view_item_name_bill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="15dp"
            android:textColor="#000000"
            android:gravity="left"
            android:text="10.000"
            android:layout_weight="1.0"
            android:id="@+id/text_view_item_price_bill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:gravity="right"
        android:layout_weight="1.0"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

            <ImageButton
                android:layout_margin="7dp"
                android:gravity="right"
                android:id="@+id/button_tru"
                android:background="@drawable/minus"
                android:scaleType="fitXY"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <EditText
                android:id="@+id/textview_soluong_order1"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:gravity="right"
                android:textSize="15dp" />

            <ImageButton
                android:layout_margin="7dp"
                android:gravity="right"
                android:id="@+id/button_cong"
                android:background="@drawable/add"
                android:scaleType="fitXY"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        <ImageButton
            android:id="@+id/imageButtonDelete"
            android:layout_margin="3dp"
            android:scaleType="fitXY"
            android:background="@drawable/delete1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

</LinearLayout>